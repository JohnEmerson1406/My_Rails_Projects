<%= bootstrap_form_for(@extract, url: url, method: method, html: { class: 'form-horizontal' }) do |f| %>
  <div class="block block-rounded block-themed">
    <div class="block-content">
      <%= f.text_field :movement %>
      <%= f.select :kind, Extract.kinds.keys.map {|kind| [t("enums.kind.#{kind}"), kind]}, { include_blank: "Selecione o tipo" } %>
      <%= f.number_field :value, step: :any %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary btn-rounded', data: { disable_with: 'Salvando...'} %>
    <%= link_to t('.cancel', default: t("helpers.links.cancel")) , extracts_path, class: 'btn btn-secondary btn-rounded' %>
  </div>
<% end %>
