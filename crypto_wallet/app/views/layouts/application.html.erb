<!DOCTYPE html>
<html>
  <head>
    <title>CryptoWallet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <ul class="nav justify-content-end">
        <li class="nav-item">
          <%= link_to '[HOME]', root_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%#= link_to 'Português', '/?locale=pt-BR' %>
          <%#= link_to 'Português', root_path(locale: "pt-BR") %>
          <%= link_to 'Português', root_path(locale: "pt-BR"), class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%#= link_to 'English', '/?locale=en' %>
          <%#= link_to 'English', root_path(locale: "en") %>
          <%= link_to 'English', root_path(locale: "en"), class:"nav-link" %>
        </li>
      </ul>
      <%= yield %>
    </div>
    <script>$.notify("Funcionou!", "success");</script>
  </body>
</html>
